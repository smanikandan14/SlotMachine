<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"
        android:drawable="@drawable/spin_button_pressed"/>
    <item android:state_pressed="true"
        android:drawable="@drawable/spin_button_pressed" /> <!-- pressed -->
    <item android:state_enabled="false"
        android:drawable="@drawable/spin_button_disabled"/>
    <item android:state_focused="true"
        android:drawable="@drawable/spin_button_pressed" /> <!-- focused -->
    <item android:drawable="@drawable/spin_button_normal" /> <!-- default -->
</selector>